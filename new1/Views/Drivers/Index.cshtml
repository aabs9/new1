@model IEnumerable<new1.Models.Driver>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Areas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.HasAC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remaining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Areas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.HasAC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenderType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f7f8fa;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #333;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    a {
        text-decoration: none;
        color: #0d6efd;
        transition: 0.2s;
    }

    a:hover {
        color: #084298;
    }

    p a {
        background: #0d6efd;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
    }

    p a:hover {
        background: #0b5ed7;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    thead {
        background: #0d6efd;
        color: white;
    }

    th, td {
        text-align: left;
        padding: 12px 16px;
        border-bottom: 1px solid #eee;
    }

    th {
        font-weight: 600;
        text-transform: capitalize;
    }

    tr:hover {
        background: #f2f6ff;
        transition: 0.3s;
    }

    td:last-child {
        white-space: nowrap;
        text-align: center;
    }

    td:last-child a {
        margin: 0 4px;
        color: white;
        background: #0d6efd;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    td:last-child a:hover {
        background: #084298;
    }

    /* ألوان مختلفة للأزرار */
    td:last-child a:nth-child(1) {
        background: #ffc107;
    }

    td:last-child a:nth-child(1):hover {
        background: #e0a800;
    }

    td:last-child a:nth-child(2) {
        background: #17a2b8;
    }

    td:last-child a:nth-child(2):hover {
        background: #117a8b;
    }

    td:last-child a:nth-child(3) {
        background: #dc3545;
    }

    td:last-child a:nth-child(3):hover {
        background: #bb2d3b;
    }
</style>
