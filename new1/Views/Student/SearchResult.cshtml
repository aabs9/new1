@model IEnumerable<new1.Models.Driver>
@{
    ViewData["Title"] = "نتائج البحث";
}
<h2>نتائج البحث</h2>
<table class="table table-striped">
    <thead>
        <tr>  
            <th>الاسم</th>
            <th>الهاتف</th>
            <th>المنطقة</th>
            <th>رقم السيارة</th>
            <th>النوع</th>
            <th>السعة</th>
            <th>المتبقي</th>
            <th>التبريد</th>
            <th>التقييم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Name</td>
                <td><a href="tel:@d.Phone">@d.Phone</a></td>
                <td>@d.Areas</td>
                <td>@d.CarNumber</td>
                <td>@d.CarType</td>
                <td>@d.Capacity</td>
                <td>@d.Remaining</td>
                <td>@(d.HasAC ? "نعم" : "لا")</td>
                <td>@d.Rating /5</td>
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-outline-danger" asp-controller="Student" asp-action="Search">رجوع</a>

<style>
  
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 30px;
        direction: rtl; 
    }

    h2 {
        text-align: center;
        color: #222;
        margin-bottom: 25px;
        font-size: 1.9rem;
        letter-spacing: 0.5px;
    }

    
    form {
        max-width: 700px;
        margin: 0 auto;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease;
    }

        form:hover {
            transform: translateY(-3px);
        }

  
    .form-label {
        font-weight: 600;
        color: #444;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 12px 16px;
        width: 100%;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control::placeholder {
            color: #aaa;
            font-style: italic;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
            outline: none;
        }

    
    button.btn {
        background: linear-gradient(90deg, #0d6efd, #007bff);
        border: none;
        padding: 12px 40px;
        border-radius: 10px;
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: block;
        margin: 25px auto 0;
    }

        button.btn:hover {
            background: linear-gradient(90deg, #084298, #0056b3);
            transform: scale(1.03);
        }

        
        button.btn:active {
            transform: scale(0.98);
        }

  

    .col-md-3 {
        width: 100%;
    }

    button.btn {
        width: 100%;
        padding: 12px;
        font-size: 1.05rem;
    }

    }
</style>
